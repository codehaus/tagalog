<?xml version="1.0" encoding="ISO-8859-1"?>

<project>
  <pomVersion>3</pomVersion>

  <groupId>tagalog</groupId>
  <artifactId>tagalog-script</artifactId>
  <id>tagalog-script</id>
  <name>tagalog-script</name>
  <currentVersion>0.1</currentVersion>

  <organization>
    <name>Mark Wilkinson</name>
    <url>http://codehaus.org/</url>
    <logo>http://codehaus.org/codehaus-small.gif</logo>
  </organization>

  <inceptionYear>2004</inceptionYear>
  <package>org.codehaus.tagalog.script</package>
  <logo>/images/tagalog-logo.png</logo>

  <shortDescription>
    Data model to represent executable scripts.
  </shortDescription>

  <repository>
    <connection>scm:cvs:pserver:anonymous@cvs.codehaus.org:/scm/cvspublic:outhaus/mhw/tagalog-script</connection>
  </repository>

  <dependencies>
    <dependency>
      <groupId>tagalog</groupId>
      <artifactId>tagalog</artifactId>
      <version>SNAPSHOT</version>
    </dependency>
  </dependencies>

  <developers>
   <developer>
      <name>Mark H. Wilkinson</name>
      <id>mhw</id>
      <email>mhw@kremvax.net</email>
      <roles>
        <role>project lead</role>
      </roles>
    </developer>
  </developers>

  <build>
    <nagEmailAddress>mhw@kremvax.net</nagEmailAddress>
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>src/test</unitTestSourceDirectory>

    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <excludes>
        <exclude>**/AbstractParserTest.java</exclude>
      </excludes>

      <resources>
        <resource>
          <directory>src/test</directory>
          <includes>
            <include>**/*.xml</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
  </build>

  <reports>
    <report>maven-jdepend-plugin</report>
    <report>maven-checkstyle-plugin</report>
    <report>maven-jcoverage-plugin</report>
    <report>maven-changes-plugin</report>
    <report>maven-changelog-plugin</report>
    <report>maven-developer-activity-plugin</report>
    <report>maven-file-activity-plugin</report>
    <report>maven-license-plugin</report>
    <report>maven-javadoc-plugin</report>
    <report>maven-jxr-plugin</report>
    <report>maven-junit-report-plugin</report>
  </reports>
</project>
