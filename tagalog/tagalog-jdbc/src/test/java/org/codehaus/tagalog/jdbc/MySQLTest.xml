<?xml version="1.0"?>

<configuration>
  <logging>
    <implementation>org.codehaus.plexus.logging.console.ConsoleLoggerManager</implementation>
    <logger>
      <threshold>warn</threshold>
    </logger>
  </logging>

  <components>
    <!--
     | Connect to MySQL on the local host using the username 'guest'. A
     | suitable account can be created by excuting the statement
     | grant usage on *.* to guest;
     | as the MySQL root user.
     -->
    <component>
      <role>com.fintricity.jdbc.ConnectionManager</role>
      <implementation>com.fintricity.jdbc.DataSourceConnectionManager</implementation>
      <configuration>
        <data-source-class>com.mysql.jdbc.jdbc2.optional.MysqlDataSource</data-source-class>
        <properties>
          <property>
            <name>url</name>
            <value>jdbc:mysql://localhost/test?useTimezone=true&amp;serverTimezone=GMT</value>
          </property>
          <property>
            <name>user</name>
            <value>guest</value>
          </property>
        </properties>
      </configuration>
    </component>
  </components>
</configuration>
