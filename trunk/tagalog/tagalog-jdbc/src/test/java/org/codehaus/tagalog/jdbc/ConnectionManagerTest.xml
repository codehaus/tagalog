<?xml version="1.0"?>

<configuration>
  <logging>
    <implementation>org.codehaus.plexus.logging.console.ConsoleLoggerManager</implementation>
    <logger>
      <threshold>warn</threshold>
    </logger>
  </logging>

  <components>
    <!--
     | Connect to MySQL on the local host using the username 'guest'. A
     | suitable account can be created by excuting the statement
     | grant usage on *.* to guest;
     | as the MySQL root user.
     -->
    <component>
      <role>org.codehaus.tagalog.jdbc.ConnectionManager</role>
      <implementation>org.codehaus.tagalog.jdbc.DataSourceConnectionManager</implementation>
      <configuration>
        <data-source-class>com.mysql.jdbc.jdbc2.optional.MysqlDataSource</data-source-class>
        <properties>
          <property>
            <name>url</name>
            <value>jdbc:mysql://localhost/test</value>
          </property>
          <property>
            <name>user</name>
            <value>guest</value>
          </property>
        </properties>
      </configuration>
    </component>

    <!--
     | Connect to Oracle on the local host using the username 'guest'. A
     | suitable account can be created by excuting the statement
     | grant connect to guest identified by guest;
     | as an Oracle DBA user.
     -->
    <component>
      <role>org.codehaus.tagalog.jdbc.ConnectionManager</role>
      <role-hint>oracle</role-hint>
      <implementation>org.codehaus.tagalog.jdbc.DataSourceConnectionManager</implementation>
      <configuration>
        <data-source-class>oracle.jdbc.pool.OracleDataSource</data-source-class>
        <properties>
          <property>
            <name>URL</name>
            <value>jdbc:oracle:thin:@//localhost:1521/ora</value>
          </property>
          <property>
            <name>user</name>
            <value>guest</value>
          </property>
          <property>
            <name>password</name>
            <value>guest</value>
          </property>
        </properties>
      </configuration>
    </component>
  </components>
</configuration>
